{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "schematics": {
      "root": "projects/schematics/",
      "sourceRoot": "projects/schematics/src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "spec": false,
          "changeDetection": "OnPush"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/schematics",
            "index": "projects/schematics/src/index.html",
            "main": "projects/schematics/src/main.ts",
            "polyfills": "projects/schematics/src/polyfills.ts",
            "tsConfig": "projects/schematics/tsconfig.app.json",
            "assets": [
              "projects/schematics/src/favicon.ico",
              "projects/schematics/src/assets"
            ],
            "styles": [
              "projects/schematics/src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/schematics/src/environments/environment.ts",
                  "with": "projects/schematics/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "schematics:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "schematics:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "schematics:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/schematics/src/test.ts",
            "polyfills": "projects/schematics/src/polyfills.ts",
            "tsConfig": "projects/schematics/tsconfig.spec.json",
            "karmaConfig": "projects/schematics/karma.conf.js",
            "styles": [
              "projects/schematics/src/styles.css"
            ],
            "scripts": [],
            "assets": [
              "projects/schematics/src/favicon.ico",
              "projects/schematics/src/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/schematics/tsconfig.app.json",
              "projects/schematics/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "schematics"
}
